{
  "compilerOptions": {
    "rootDir": "./",
    "incremental": true,
    "tsBuildInfoFile": "build/buildFile",
    "target": "ES6",
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": false,
    "lib": ["es2019", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
